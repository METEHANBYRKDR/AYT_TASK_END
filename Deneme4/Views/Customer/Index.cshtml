@model List<Customer>

<h2>Customer List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Customer Name</th>
            <th>Is Active</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.CustomerId</td>
                <td>@customer.CustomerName</td>
                <td>@customer.IsActive</td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Ekle" class="btn btn-success">Yeni Müşteri Ekle</a>